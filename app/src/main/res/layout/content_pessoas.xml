<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".PessoasActivity"
    tools:showIn="@layout/activity_pessoas">

    <Button
        android:id="@+id/butãoAdicionarP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margem_padrao"
        android:layout_marginLeft="@dimen/margem_padrao"
        android:text="@string/butãoAdd"
        app:layout_constraintBaseline_toBaselineOf="@+id/butãoEditarP"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="Add"/>

    <Button
        android:id="@+id/butãoEditarP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margem_padrao"
        android:layout_marginLeft="@dimen/margem_padrao"
        android:layout_marginTop="@dimen/margem_padrao"
        android:text="@string/butãoEditar"
        app:layout_constraintStart_toEndOf="@+id/butãoAdicionarP"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="Edit"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margem_padrao"
        android:layout_marginLeft="@dimen/margem_padrao"
        android:layout_marginTop="@dimen/margem_padrao"
        android:text="@string/butãoDelete"
        app:layout_constraintBaseline_toBaselineOf="@+id/butãoEditarP"
        app:layout_constraintStart_toEndOf="@+id/butãoEditarP"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="Delete"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutGerirNomeP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margem_padrao"
        android:layout_marginLeft="@dimen/margem_padrao"
        android:layout_marginTop="@dimen/margem_padrao"
        android:layout_marginEnd="@dimen/margem_padrao"
        android:layout_marginRight="@dimen/margem_padrao"
        app:layout_constraintEnd_toStartOf="@+id/butãoProcurarP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butãoEditarP">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextGerirNomeP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/HintNome" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/butãoProcurarP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/butãoSearch"
        app:layout_constraintBaseline_toBaselineOf="@+id/textInputLayoutGerirNomeP"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>