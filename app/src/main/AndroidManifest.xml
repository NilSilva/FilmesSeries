<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nil.filmesseries">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".PessoasActivity"
            android:label="@string/title_activity_pessoas"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nil.filmesseries.MainActivity" />
        </activity>
        <activity
            android:name=".DeleteFSActivity"
            android:label="@string/title_activity_delete_fs"
            android:parentActivityName=".Tudo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditarFSActivity"
            android:label="@string/title_activity_editar_fs"
            android:parentActivityName=".Tudo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AdicionarFSActivity"
            android:label="@string/title_activity_adicionar_fs"
            android:parentActivityName=".Tudo"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nil.filmesseries.Tudo" />
        </activity>
        <activity
            android:name=".Tudo"
            android:label="@string/title_activity_tudo"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nil.filmesseries.MainActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>